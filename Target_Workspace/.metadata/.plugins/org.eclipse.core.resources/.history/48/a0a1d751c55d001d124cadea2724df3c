#include<stdint.h>

int main(void)
{
	//LED
	uint32_t  volatile *const pClkCtrlReg =   (uint32_t*)0x40023830;
	uint32_t  volatile *const pPortAModeReg = (uint32_t*)0x40020000;
	uint32_t  volatile *const pPortAOutReg =  (uint32_t*)0x40020014;

	//INPUT
	uint32_t volatile *const pPortBModeReg = (uint32_t*)0x40020400;
	uint32_t const volatile *const pPortBInReg =   (uint32_t*)0x40020410;

	//enable the clock for GPOIB , GPIOA peripherals in the AHB1ENR
	//LED
	*pClkCtrlReg |= ( 1 << 0);
	//INPUT
	*pClkCtrlReg |= ( 1 << 1);


	//LED
	//2. configure the mode of the IO pin as output
	//a. clear the 10th and 11th bit positions (CLEAR)
	*pPortAModeReg &= ~( 3 << 10);		// 3 is 0b11 in binary =  1 for bit 10 and 1 for bit 11
	//b. make 10th bit position as 1 (SET)
	*pPortAModeReg |= ( 1 << 10);

	//INPUT
	//Configure PB0 as input mode (GPIOB MODE REGISTER)
	*pPortBModeReg &= ~(3 << 0);

	while(1)
	{
		//read the pin status of the pin PA0 (GPIOA INPUT DATA REGISTER)
		uint8_t  pinStatus = (uint8_t)(*pPortAInReg & 0x1); //zero out all other bits except bit 0

		if(pinStatus){
			//turn on the LED
			*pPortAOutReg |= ( 1 << 5);
		}else{
			//turn off the LED
			*pPortAOutReg &= ~( 1 << 5);
		}
	}

}

